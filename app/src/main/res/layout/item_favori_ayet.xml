<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#1B2B21"
    app:cardCornerRadius="15dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <TextView
            android:id="@+id/txtFavArapca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textAlignment="viewEnd"
            android:layout_marginBottom="12dp"
            android:fontFamily="serif" />

        <TextView
            android:id="@+id/txtFavMeal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rahman ve Rahim olan Allah'ın adıyla."
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:lineSpacingExtra="5dp" />

        <TextView
            android:id="@+id/txtFavSureNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Fatiha, 1"
            android:textColor="#4A7C59"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>