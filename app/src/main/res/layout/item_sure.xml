<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/txtSureNo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/circle_bg"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/kuran_ana_yesil"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtSureAdi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fatiha"
            android:textColor="@color/kuran_koyu_yesil"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSureMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mekke • 7 Ayet"
            android:textColor="#666666"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtArapcaAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الفاتحة"
        android:textColor="@color/kuran_ana_yesil"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
</androidx.cardview.widget.CardView>